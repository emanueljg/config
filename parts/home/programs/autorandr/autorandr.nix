{ pkgs, ... }:

{
  imports = [
    ../../hm.nix
  ];
  my = {
    # current solution to stuff definitely needing to run 
    # after autorandr setting potential external displays
    # is to just run them here instead
    xsession.initExtra = ''
      xrandr --setprovideroutputsource 1 0; 
      xrandr --setprovideroutputsource 2 0;
      autorandr -l mobile; 
      autorandr -l docked;
    '';
    programs.autorandr = let
      fingerprint = {
        # laptop screen
        eDP-1 = "00ffffffffffff0009e5c00600000000011a0104951c10780af6a0995951942d1f505400000001010101010101010101010101010101c93680cd703814403020360018a51000001ad42b80cd703814406464440518a51000001a000000fe003138364743804e5631324e353100000000000041119e001000000a010a202000d6";
        # middle dock screen 
        DVI-I-2-2 = "";
        # right dock screen
        DVI-I-1-1 = "";
        # tv screen
        HDMI-1 = "";
      };
      base-config = {
        enable = true;
        mode = "1920x1080";
        rate = "60.00";
      };
    in {
      enable = true;
      profiles = {
        "mobile" = {
          fingerprint.eDP-1 = fingerprint.eDP-1;
          config.eDP-1 = base-config;
        };
        "docked" = {
          inherit fingerprint;
          config = {
            DVI-I-2-2 = base-config // {
              primary = true;
              position = "0x0";
            };
            DVI-I-1-1 = base-config // {
              position = "1920x0";
            };
            eDP-1 = base-config // {
              position = "3840x0";
            };
          };
        };
        "tv" = {
          fingerprint.eDP-1 = fingerprint.eDP-1;
          fingerprint.HDMI-1 = fingerprint.HDMI-1;

          config = {
            HDMI-1 = base-config // {
              primary = true;
              position = "0x0";
            };

            eDP-1 = base-config // {
              position = "0x1080";
            };
          };
        };
      };
    };
  };
}
